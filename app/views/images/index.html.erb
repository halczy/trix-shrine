<p id="alert"><%= notice %></p>

<h1>Images</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Raw Image Data:</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.image_data %></td>
        <td><%= image_tag image.image_url, class: 'img-fluid' %></td>
        <td><%= link_to 'Show', image, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_image_path(image),
                                class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', image, method: :delete,
                                   data: { confirm: 'Are you sure?' },
                                   class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path, class: 'btn btn-primary' %>
