<p id="alert"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content.truncate(100) %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_post_path(post),
                                class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete,
                                   data: { confirm: 'Are you sure?' },
                                   class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
